#include <stdio.h>

// 1. A FUNÇÃO: Ela automatiza a ordenação
void selectionSort(int v[], int n) {
    int i, j, indiceMenor, aux;

    // Laço externo: move a "fronteira" do que já está ordenado
    for (i = 0; i < n - 1; i++) {
        indiceMenor = i; // Começamos assumindo que o i é o menor

        // Laço interno: PROCURA o menor valor no restante do vetor
        for (j = i + 1; j < n; j++) {
            if (v[j] < v[indiceMenor]) {
                indiceMenor = j; // Guarda a posição do novo menor encontrado
            }
        }

        // O IF: Só troca se o menor encontrado não for o que já estava lá
        if (indiceMenor != i) {
            aux = v[i];
            v[i] = v[indiceMenor];
            v[indiceMenor] = aux;
        }
    }
}

// 2. FUNÇÃO AUXILIAR: Apenas para imprimir (para o main ficar limpo)
void imprimirVetor(int v[], int n) {
    for (int i = 0; i < n; i++) {
        printf("%d ", v[i]);
    }
    printf("\n");
}

int main() {
    int meuVetor[10] = {50, 10, 80, 30, 20, 70, 40, 90, 100, 60};
    int tamanho = 10;

    printf("Antes: ");
    imprimirVetor(meuVetor, tamanho);

    // Chamando a automação
    selectionSort(meuVetor, tamanho);

    printf("Depois: ");
    imprimirVetor(meuVetor, tamanho);

    return 0;
}
