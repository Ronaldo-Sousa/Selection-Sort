#include <stdio.h>

void imprimirVetor(int vetor[], int tamanho){ //Função simples só para imprimir o vetor, agiliza o processo e facilita a visualização.
    for(int k = 0; k<tamanho; k++){
        printf("%d|", vetor[k]);
    }
    printf("\n"); //Pula uma linha para deixar mais "limpo".
}

void selectionSort(int vetor[], int tamanho){ //Prototipando a função que faz a ordenação.
    int i, j, aux, menorIndice;
    
    for(i = 0; i<tamanho-1; i++){
        menorIndice = i;
        for(j = i+1; j<tamanho; j++){
            if(vetor[j]<vetor[menorIndice]){ //Aqui decidimos se queremos ordenar de forma crescente ou decrescente, onde o símbolo menor seria crescente e maior seria decrescente.
                menorIndice = j;
            }
        }
        if(menorIndice != i){ //Aqui é realizada a troca, a variável "menorIndice" é a peça chave da função, garante que o elemento desejado seja o primeiro.
            aux = vetor[i];
            vetor[i] = vetor[menorIndice];
            vetor[menorIndice] = aux;
        }
    }
    imprimirVetor(vetor, tamanho);
}

int main(){
    int meuVetor[] = {50, 70, 30, 40, 20, 80, 5, 60, 90, 10}; //Declarando o vetor com seus elementos.
    int tam = sizeof(meuVetor)/sizeof(meuVetor[0]); //Usando o "sizeof" para determinar o tamanho do vetor de forma dinâmica em vez de estática, o próprio programa calcula o tamanho do vetor sem termos que dizer.
    
    selectionSort(meuVetor, tam);
}
