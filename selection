#include <stdio.h>

// 1. A FUNÇÃO: Ela automatiza a ordenação
void selectionSort(int vetor[], int tamanho) {
    int i, j, menorIndice, aux;

    // Laço externo: move a "fronteira" do que já está ordenado
    for (i = 0; i < tamanho - 1; i++) {
        menorIndice = i; // Começamos assumindo que o i é o menor

        // Laço interno: PROCURA o menor valor no restante do vetor
        for (j = i + 1; j < tamanho; j++) {
            if (vetor[j] < vetor[menorIndice]) {
                menorIndice = j; // Guarda a posição do novo menor encontrado
            }
        }

        // O IF: Só troca se o menor encontrado não for o que já estava lá
        if (menorIndice != i) {
            aux = vetor[i];
            vetor[i] = vetor[menorIndice];
            vetor[menorIndice] = aux;
        }
    }
}

// 2. FUNÇÃO AUXILIAR: Apenas para imprimir (para o main ficar limpo)
void imprimirVetor(int vetor[], int tamanho) {
    for (int i = 0; i < tamanho; i++) {
        printf("%d ", vetor[i]);
    }
    printf("\n");
}

int main() {
    int meuVetor[10] = {50, 10, 80, 30, 20, 70, 40, 90, 100, 60};
    int tam = 10;

    printf("Antes: ");
    imprimirVetor(meuVetor, tam);

    // Chamando a automação
    selectionSort(meuVetor, tam);

    printf("Depois: ");
    imprimirVetor(meuVetor, tam);

    return 0;
}
